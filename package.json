{
  "name": "express-clerk-drizzle-backend",
  "version": "1.0.0",
  "description": "A backend application using Express, Clerk for authentication, and Drizzle for database management.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch src/**/*.ts --exec tsx src/app.ts",
    "db:studio": "npx drizzle-kit studio",
    "db:push": "npx drizzle-kit push"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "dependencies": {
    "@clerk/express": "^1.6.0",
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "module-alias": "^2.2.3",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "drizzle-kit": "^0.31.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "typescript": "^5.2.2"
  }
}
